{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dst",
		"module": "NodeNext",
		"target": "ESNext",

		"moduleResolution": "NodeNext",
		
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,

		"preserveConstEnums": true,
		// "sourceMap": true,
		"declaration": true,

		"lib": ["ESNext", "DOM"],

		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
	},
}